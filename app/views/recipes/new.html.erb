<%= render 'shared/page_title', title: "create a new recipe" %>

<div class="row">
	<div class="col-md-12">
      <%= form_for @recipe do |f| %>
        <div class="form-group">
          <div class="control-label col-md-2 offset-md-2">
          	<%= f.label :name %>
          </div>
          <div class="col-md-8 offset-md-2">
          	<%= f.text_field :name, class: "form-control", 
          	     placeholder: "Name of recipe", autofocus: true %>
          </div>	
        </div>

        <div class="form-group">
          <div class="control-label col-md-2 offset-md-2">
          	<%= f.label :description %>
          </div>
          <div class="col-md-8 offset-md-2">
          	<%= f.text_area :description, rows: 10, class: "form-control",
          	     placeholder: "Enter steps to create recipe" %>
          </div>	
        </div>

        <div class="form-group">
        	<div class="offset-md-2">
        	  <%= f.submit class: "btn ml-3 btn-primary btn-lg btn-xlarge" %>	
        	</div>
        </div>
      <% end %>

      <div class="col-md-4 offset-md-4 colormatch">
      	[ <%= link_to "Cancel request and return to recipes listing",
      	     recipes_path %> ]
      </div>
	</div>	
</div>

